<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{MM-dd HH:mm:ss.SSS} [%-5level] [%t] [%C#%M:%L] - %msg%n
			</pattern>
		</encoder>
	</appender>

	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">

		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${APP_HOME}/logs/web.%d{yyyy-MM-dd}.log.zip
			</fileNamePattern>
			<maxHistory>10</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%-5level] [%t] [%C#%M:%L] - %msg%n
			</pattern>
		</encoder>
	</appender>


	<appender name="ACCESS_LOG_ADMIN_FILE_logstash"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${APP_HOME}/logs/access.%d{yyyy-MM-dd}.log.zip
			</fileNamePattern>
			<maxHistory>10</maxHistory>
		</rollingPolicy>
		<encoder class="net.logstash.logback.encoder.LogstashEncoder">
		</encoder>
	</appender>
	<appender name="ACCESS_LOG_USER_FILE_logstash"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${APP_HOME}/logs/user-access.%d{yyyy-MM-dd}.log.zip
			</fileNamePattern>
			<maxHistory>10</maxHistory>
		</rollingPolicy>
		<encoder class="net.logstash.logback.encoder.LogstashEncoder">
		</encoder>
	</appender>

	<logger name="adminUserAccessLogger" level="INFO">
		<appender-ref ref="ACCESS_LOG_ADMIN_FILE_logstash" />
	</logger>

	<logger name="userAccessLogger" level="INFO">
		<appender-ref ref="ACCESS_LOG_USER_FILE_logstash" />
	</logger>
	<root level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</root>


</configuration>